<body>
   <div class="container-fluid">
      <center>
         <h1>
            <%= t('.title') %>
         </h1>
         <p>
            <%= t('.contact_us') %>
         </p>
      </center>
      <div class="row">
         <div class="col-md-2 col-md-offset-1">
            <%= form_tag request_contact_path, method: 'post' do %>
            <%= label_tag :name, t('.name') %>
            <%= text_field_tag :name, '', title: t('.enter_name'), size: 50 %>
            <%= label_tag :email, t('.email')%>
            <%= email_field_tag :email,'', title: t('.enter_email'), size: 50 %>
            <%= label_tag :telephone, t('.telephone') %>
            <%= telephone_field_tag :telephone, '', title: t('.enter_telephone'), size: 50 %>
            <%= label_tag :message, t('.message') %>
            <%= text_field_tag :message, '', title: t('.enter_message'), size: 50 %>
            <%= check_box_tag(:send_email) %>
            <%= label_tag(:send_email, "Send me email receipt") %>
            <br>
              <p>we will attempt to reply to our emails within 3 business days.</p>
            <%= submit_tag t('.submit') %>
            <% end %>
         </div>
      </div>
   </div>
</body>
